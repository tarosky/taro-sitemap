{
    "name": "tarosky/sitemap",
    "description": "A sitemap plugin.",
    "type": "wordpress-plugin",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Tarosky",
            "email": "info@tarosky.co.jp"
        }
    ],
    "minimum-stability": "stable",
    "scripts": {
        "lint": "phpcs --standard=phpcs.ruleset.xml $(find ./ -name '*.php')",
        "fix": "phpcbf --standard=phpcs.ruleset.xml $(find ./ -name '*.php')"
    },
    "require": {
        "php": "^7.4|^8"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.0",
        "wp-coding-standards/wpcs": "^3.0",
        "kunoichi/virtual-member": "^1.2",
        "phpunit/phpunit": "^9",
        "yoast/phpunit-polyfills": "^2.0"
    },
    "autoload": {
        "psr-0": {
            "Tarosky\\Sitemap": "src"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
